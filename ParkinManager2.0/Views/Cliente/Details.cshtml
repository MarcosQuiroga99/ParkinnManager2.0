@model Estacionamiento.Models.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<h1>Detalles del Cliente</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">DNI</dt>
        <dd class="col-sm-10">@Model.Dni</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>

        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">Fecha de Alta</dt>
        <dd class="col-sm-10">@Model.FechaAlta?.ToString("d")</dd>

        <dt class="col-sm-2">Fecha de Nacimiento</dt>
        <dd class="col-sm-10">@Model.FehcaNacimiento?.ToString("d")</dd>
    </dl>

    <h4>Vehículos</h4>
    <ul>
        @if (Model.Vehiculos != null && Model.Vehiculos.Any())
        {
            foreach (var vehiculo in Model.Vehiculos)
            {
                <li>@vehiculo.Marca @vehiculo.Modelo - Patente: @vehiculo.Patente</li>
            }
        }
        else
        {
            <li>No tiene vehículos registrados.</li>
        }
    </ul>

    <p>
        <a asp-controller="Cliente" asp-action="Index">Volver a la lista de Clientes</a>
    </p>
</div>