@model IEnumerable<Estacionamiento.Models.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h2>Lista de Clientes</h2>

<table class="table">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Dni</td>
                <td>@cliente.Nombre</td>
                <td>@cliente.Apellido</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cliente.Dni" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@cliente.Dni" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Agregar Cliente</a>