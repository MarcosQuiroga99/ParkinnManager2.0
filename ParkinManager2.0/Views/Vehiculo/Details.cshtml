@model Estacionamiento.Models.Vehiculo

@{
    ViewData["Title"] = "Detalles del Vehículo";
}

<h1>Detalles del Vehículo</h1>

<div>
    <h4>Vehículo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Patente</dt>
        <dd class="col-sm-10">@Model.Patente</dd>

        <dt class="col-sm-2">Marca</dt>
        <dd class="col-sm-10">@Model.Marca</dd>

        <dt class="col-sm-2">Modelo</dt>
        <dd class="col-sm-10">@Model.Modelo</dd>

        <dt class="col-sm-2">Tipo de Vehículo</dt>
        <dd class="col-sm-10">@Model.TipoDeVehiculo.ToString()</dd>

        <dt class="col-sm-2">Estacionamiento</dt>
        <dd class="col-sm-10">@Model.Estacionamiento?.Name</dd>
    </dl>

    <h4>Dueño del Vehículo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">DNI del Dueño</dt>
        <dd class="col-sm-10">@Model.Dueño?.Dni</dd>

        <dt class="col-sm-2">Nombre del Dueño</dt>
        <dd class="col-sm-10">@Model.Dueño?.Nombre</dd>

        <dt class="col-sm-2">Apellido del Dueño</dt>
        <dd class="col-sm-10">@Model.Dueño?.Apellido</dd>

        <dt class="col-sm-2">Usuario del Dueño</dt>
        <dd class="col-sm-10">@Model.Dueño?.UserName</dd>

        <dt class="col-sm-2">Fecha de Alta del Dueño</dt>
        <dd class="col-sm-10">@Model.Dueño?.FechaAlta?.ToString("d")</dd>

        <dt class="col-sm-2">Fecha de Nacimiento del Dueño</dt>
        <dd class="col-sm-10">@Model.Dueño?.FehcaNacimiento?.ToString("d")</dd>
    </dl>

    <p>
        <a asp-controller="Vehiculo" asp-action="Edit" asp-route-id="@Model.Patente" class="btn btn-primary">Editar Vehículo</a>
        <a asp-controller="Vehiculo" asp-action="Delete" asp-route-id="@Model.Patente" class="btn btn-danger">Eliminar Vehículo</a>
    </p>

    <p>
        <a asp-controller="Estacionamiento" asp-action="Index" class="btn btn-secondary">Volver a la lista de Estacionamientos</a>
    </p>
</div>
