@model IEnumerable<Estacionamiento.Models.Vehiculo>

@{
    ViewData["Title"] = "Lista de Vehículos";
}

<h1>Lista de Vehículos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo Vehículo</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Patente</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Tipo de Vehículo</th>
            <th>Dueño</th>
            <th>Estacionamiento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var vehiculo in Model)
            {
                <tr>
                    <td>@vehiculo.Patente</td>
                    <td>@vehiculo.Marca</td>
                    <td>@vehiculo.Modelo</td>
                    <td>@vehiculo.TipoDeVehiculo.ToString()</td>
                    <td>@vehiculo.Dueño?.Nombre @vehiculo.Dueño?.Apellido</td>
                    <td>@vehiculo.Estacionamiento?.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@vehiculo.Patente" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@vehiculo.Patente" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@vehiculo.Patente" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No hay vehículos registrados.</td>
            </tr>
        }
    </tbody>
</table>