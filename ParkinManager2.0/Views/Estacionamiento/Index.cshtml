@model Estacionamiento.Models.Estacionamiento

<h2>@Model.Name</h2>
<p>Dirección: @Model.Direcion</p>
<p>Plazas disponibles: @Model.MaxPlaza - @Model.Plaza.Count()</p>

<h3>Vehículos en las plazas</h3>
<table>
    <thead>
        <tr>
            <th>Patente</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehiculo in Model.Plaza)
        {
            <tr>
                <td>@vehiculo.Patente</td>
                <td>@vehiculo.Marca</td>
                <td>@vehiculo.Modelo</td>
                <td>
                    <a asp-action="Edit" asp-controller="Vehiculo" asp-route-id="@vehiculo.Patente">Editar</a>
                    <a asp-action="Delete" asp-controller="Vehiculo" asp-route-id="@vehiculo.Patente">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Agregar Vehículo</h3>
<form asp-action="Create" asp-controller="Vehiculo" method="post">
    <input type="hidden" name="EstacionamientoId" value="@Model.Id" />
    <div>
        <label>Patente:</label>
        <input type="text" name="Patente" required />
    </div>
    <div>
        <label>Marca:</label>
        <input type="text" name="Marca" required />
    </div>
    <div>
        <label>Modelo:</label>
        <input type="text" name="Modelo" required />
    </div>
    <button type="submit">Agregar Vehículo</button>
</form>