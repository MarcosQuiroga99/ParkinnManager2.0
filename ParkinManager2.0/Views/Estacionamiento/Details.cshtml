@model Estacionamiento.Models.Estacionamiento

<h2>@Model.Name</h2>

<p>Plazas ocupadas: @ViewBag.PlazasOcupadas</p>
<p>Plazas libres: @ViewBag.PlazasLibres</p>

<h3>Vehículos en el estacionamiento</h3>
<table class="table">
    <thead>
        <tr>
            <th>Patente</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehiculo in Model.Plaza)
        {
            <tr>
                <td>@vehiculo.Patente</td>
                <td>@vehiculo.Marca</td>
                <td>@vehiculo.Modelo</td>
                <td>
                    <a asp-action="Edit" asp-controller="Vehiculo" asp-route-id="@vehiculo.Patente">Editar</a> |
                    <a asp-action="Delete" asp-controller="Vehiculo" asp-route-id="@vehiculo.Patente">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Añadir Vehículo</h3>
<form asp-action="Create" asp-controller="Vehiculo">
    <input type="hidden" name="EstacionamientoId" value="@Model.Id" />
    <div class="form-group">
        <label>Patente</label>
        <input type="text" name="Patente" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Marca</label>
        <input type="text" name="Marca" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Modelo</label>
        <input type="text" name="Modelo" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Añadir Vehículo</button>
</form>