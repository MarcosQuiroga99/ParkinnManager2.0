@model Estacionamiento.Models.Estacionamiento
@{
    ViewBag.Title = "Detalles del Estacionamiento";
}

<h2>@Model.Name</h2>

<p><strong>Dirección:</strong> @Model.Direcion</p>
<p><strong>Capacidad máxima:</strong> @Model.MaxPlaza</p>

<!-- Formulario de búsqueda -->
<form asp-action="Index" method="get">
    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="Buscar cliente o vehículo" />
    <button type="submit">Buscar</button>
</form>

<h3>Vehículos en el Estacionamiento</h3>
<table>
    <thead>
        <tr>
            <th>Patente</th>
            <th>Marca</th>
            <th>Modelo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehiculo in Model.Plaza)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="Vehiculo" asp-route-id="@vehiculo.Patente">@vehiculo.Patente</a>
                </td>
                <td>@vehiculo.Marca</td>
                <td>@vehiculo.Modelo</td>
            </tr>
        }
    </tbody>
</table>

<h3>Clientes en el Estacionamiento</h3>
<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.Clientes)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="Cliente" asp-route-id="@cliente.Dni">@cliente.Nombre</a>
                </td>
                <td>@cliente.Apellido</td>
            </tr>
        }
    </tbody>
</table>
