@model Estacionamiento.Models.Estacionamiento

<h2>@Model.Name</h2>

<p>Dirección: @Model.Direcion</p>
<p>Número de plazas: @Model.MaxPlaza</p>

<h3>Vehículos en el estacionamiento</h3>
<table class="table">
    <thead>
        <tr>
            <th>Patente</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehiculo in Model.Plaza)
        {
            <tr>
                <td>@vehiculo.Patente</td>
                <td>@vehiculo.Marca</td>
                <td>@vehiculo.Modelo</td>
                <td>
                    <a asp-action="EditVehiculo" asp-route-patente="@vehiculo.Patente" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="DeleteVehiculo" asp-route-patente="@vehiculo.Patente" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Añadir Vehículo</h3>
<form asp-action="CreateVehiculo" method="post">
    <div class="form-group">
        <label>Patente</label>
        <input type="text" name="Patente" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Marca</label>
        <input type="text" name="Marca" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Modelo</label>
        <input type="text" name="Modelo" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Añadir Vehículo</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Volver</a>